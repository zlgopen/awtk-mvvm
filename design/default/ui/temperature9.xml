<window v-model="temperature"  anim_hint="htranslate">
  <label x="center" y="30" w="90%" h="40" text="temperature"/>
  <label x="center" y="middle" w="50%" h="40" v-data:text="{value}"/>
  <slider x="center" y="middle:40" w="80%" h="20" v-data:value="{value, Trigger=Changing}"/>
  
  <button text="Close" x="center" y="bottom:40" w="40%" h="40" v-on:click="{nothing, CloseWindow=True}"/>
</window>
